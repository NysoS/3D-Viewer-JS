{
  "compilerOptions": {
    "module": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "ES6",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "declaration": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts", "node_modules"]
}
